@model  IEnumerable<Lab8.Models.ViewModels.graphModel>
<link rel="stylesheet" href="~/Content/bootstrap.css" />
<body id="homeBody">
    <div class="row">
        @Html.ActionLink("Home", "Index", "Home", new { @class = "btn btn-primary btn-large" })
        @Html.ActionLink("Change Team", "Create", "Graph", new { @class = "btn btn-primary btn-large" })
        <br />
    </div>

    <div class="col-md-4">
        <table class="table" id="mytable">
            <tr><th>Pick and Athlete</th><th></th></tr>
            @foreach (var item in ViewBag.team)
            {

                <tr>
                    <td>@Html.DisplayFor(modelItem => item)  </td>
                    <td><input id="athchoice" type="radio" value="@item"></td>
                </tr>


            }

        </table>
    </div>

    <div class="col-md-2"></div>
    <div class="col-md-4">
        <table class="table" id="mytable" width="40%">
            <tr><th>Pick a Distance</th><th></th></tr>
            @foreach (var item in ViewBag.events)
            {

                <tr>
                    <td> @Html.DisplayFor(modelItem => item)  </td>
                    <td><input id="evchoice" type="radio" value="@item"></td>
                </tr>


            }

        </table>
    </div>

    <input id="request" name="request" type="button" value="Generate Graph" />
    <div class="row">
        <div class="col-md-10">
            <div id="theplot"></div>
        </div>
    </div>
</body>

@section scripts {
    <script src="~/Scripts/main.js"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
}