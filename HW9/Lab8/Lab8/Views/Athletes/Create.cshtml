@model Lab8.Models.Athlete

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body id="homeBody">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div id="testphoto">
                <a><img src="~/Content/Images/trackPicture.jpg" width="700" height="250" /></a>
            </div>

            <h4>Add an Athlete</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">

                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    Boys Team: @Html.RadioButtonFor(model => model.Gender, "Boys")
                    Girls Team: @Html.RadioButtonFor(model => model.Gender, "Girls")

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TID, "TID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("TID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("View All Athletes", "Index", null, new { @class = "btn btn-primary btn-large" })
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary btn-large" })
</div>
</body>
</html>